@model IEnumerable<ShoeShop_WebDesigner.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Purchase Orders";
}

<h2>Purchase Orders</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Order</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Quantity</th>
            <th>Supplier</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Quantity</td>
                <td>@order.Supplier?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>