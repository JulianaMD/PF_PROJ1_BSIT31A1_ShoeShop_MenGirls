@model ShoeShop_WebDesigner.Models.PurchaseOrder

@{
    ViewData["Title"] = "Delete Purchase Order";
}

<h2>Delete Purchase Order</h2>
<hr />
<h4>Are you sure you want to delete this order?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Supplier ID</dt>
        <dd class="col-sm-10">@Model.SupplierId</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>